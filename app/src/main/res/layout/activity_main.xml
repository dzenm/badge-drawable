<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Drawable" />

        <RadioButton
            android:id="@+id/radioButtonSelectorDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selector Drawable" />

        <RadioButton
            android:id="@+id/radioButtonVectorDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vector Drawable" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonTopLeft"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Top Left" />

        <Button
            android:id="@+id/buttonTopRight"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Top Right" />

        <Button
            android:id="@+id/buttonBottomLeft"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bottom Left" />

        <Button
            android:id="@+id/buttonBottomRight"
            android:layout_width="0dp"
            android:onClick="onClick"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Bottom Right" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonReset"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset" />
</LinearLayout>
